{
  "name": "ArkClient",
  "version": "1.3.2",
  "productName": "ArkClient",
  "description": "Ark Desktop",
  "main": "main.js",
  "scripts": {
    "postinstall": "grunt build && npm run rebuild",
    "rebuild": "electron-rebuild --force --module_dir . -w node-hid ",
    "electron": "electron --version",
    "start": "electron .",
    "dev": "grunt dev",
    "pack": "build --dir",
    "dist": "npm run dist:win && npm run dist:macos && npm run dist:linux && npm run dist:win32",
    "dist-quick": "npm run dist:win && npm run dist:macos && npm run dist:linux",
    "dist:win": "build --win",
    "dist:win32": "build --win --ia32",
    "dist:macos": "build --macos",
    "dist:linux": "build --linux",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArkEcosystem/ark-desktop.git"
  },
  "keywords": [
    "Electron",
    "Ark",
    "Client"
  ],
  "author": {
    "name": "Fx Thoorens",
    "email": "fixcrypt@gmail.com",
    "url": "https://github.com/fix"
  },
  "contributors": [
    {
      "name": "Guillaume Verbal",
      "email": "doweig@ark.io",
      "url": "https://github.com/doweig"
    },
    {
      "name": "Lucio Rubens",
      "email": "lucio@ark.io",
      "url": "https://github.com/luciorubeens"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArkEcosystem/ark-desktop/issues"
  },
  "homepage": "https://github.com/ArkEcosystem/ark-desktop#readme",
  "peerDependencies": {
    "angular": "@>=1.6 <1.7",
    "angular-animate": "^@>=1.6 <1.7",
    "angular-aria": "@>=1.6 <1.7",
    "angular-messages": "@>=1.6 <1.7"
  },
  "dependencies": {
    "about-window": "~1.7.0",
    "coffeescript": "^2.0.0",
    "crypto": "0.0.3",
    "@uirouter/angularjs": "^1.0.6",
    "angular": "^1.6.1",
    "angular-animate": "^1.6.1",
    "angular-aria": "^1.6.1",
    "angular-gettext": "^2.3.6",
    "angular-material": "^1.1.5",
    "angular-material-data-table": "^0.10.10",
    "angular-messages": "^1.6.1",
    "angular-qrcode": "^7.2.0",
    "arkjs": "git://github.com/ArkEcosystem/ark-js#mainnet",
    "bip39": "^2.2.0",
    "electron": "^1.6.11",
    "jquery": "^3.2.1",
    "jsqr": "^0.2.2",
    "node-vibrant": "^3.0.0-alpha.2",
    "qrcode-generator": "^1.3.1",
    "electron-window-state": "^4.1.1",
    "ledgerco": "github:ledgerhq/ledger-node-js-api#master",
    "md-data-table": "^2.2.0",
    "q": "^1.5.0"
  },
  "devDependencies": {
    "angular-mocks": "^1.6.1",
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "brfs": "^1.4.3",
    "electron": "^1.7.5",
    "electron-builder": "^19.20.1",
    "electron-rebuild": "^1.6.0",
    "eslint": "^4.4.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "grunt": "~0.4.5",
    "grunt-angular-gettext": "^2.3.6",
    "grunt-browserify": "^5.0.0",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-connect": "^1.0.2",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-nodeunit": "~1.0.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-eslint": "^20.0.0",
    "grunt-htmllint": "^0.2.7",
    "jsqr": "^0.2.2",
    "load-grunt-tasks": "^3.5.2",
    "mocha": "^3.5.0",
    "spectron": "^3.7.2"
  },
  "build": {
    "appId": "com.arkwallet.liteclient",
    "mac": {
      "category": "finance"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "description": "A Lite Client used to securely connect to the Ark network and manage your Ark assets.",
      "target": [
        "deb",
        "tar.xz"
      ]
    },
    "deb": {
      "synopsis": "Ark Desktop Wallet"
    },
    "dmg": {
      "icon": "build/icon.icns"
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
