  "build": {
    "productName": "Ark Desktop Wallet",
    "appId": "io.ark.desktop-wallet",
    "compression": "maximum",
    "artifactName": "${name}-${os}-${arch}-${version}.${ext}",
    "publish": {
      "provider": "github",
      "vPrefixedTagName": false
    },
    "protocols": {
      "name": "Ark URI scheme",
      "schemes": [
        "ark"
      ],
      "role": "Viewer"
    },
    "directories": {
      "output": "build/target"
    },
    "files": [
      "dist/electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "icon": "build/icons/icon.icns",
      "hardenedRuntime": false
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "category": "Utility",
      "executableName": "ark-desktop-wallet",
      "icon": "build/icons",
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "desktop": {
        "MimeType": "x-scheme-handler/ark;"
      }
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "libudev-dev"
      ]
    },
    "dmg": {
      "icon": "build/icons/icon.icns"
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
