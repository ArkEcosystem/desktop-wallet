{
  "name": "KapuClient",
  "version": "1.2.3",
  "productName": "KapuClient",
  "description": "Kapu Desktop",
  "main": "main.js",
  "scripts": {
    "postinstall": "cd client && npm install && npm run bundle && cd ..",
    "electron": "electron --version",
    "start": "electron main.js",
    "pack": "build --target dir",
    "dist": "npm run dist:win && npm run dist:macos && npm run dist:linux && npm run dist:win32",
    "dist-quick": "npm run dist:win && npm run dist:macos && npm run dist:linux",
    "dist:win": "build --win --x64",
    "dist:win32": "build --win --ia32",
    "dist:linux": "build --linux deb tar.xz",
    "dist:macos": "build --macos"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fix/ark-desktop.git"
  },
  "keywords": [
    "Electron",
    "Kapu",
    "Client"
  ],
  "author": {
    "name": "Fx Thoorens",
    "email": "fixcrypt@gmail.com",
    "url": "https://github.com/fix"
  },
  "contributors": [
    {
      "name": "Guillaume Verbal",
      "email": "doweig@ark.io",
      "url": "https://github.com/doweig"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fix/ark-desktop/issues"
  },
  "homepage": "https://github.com/fix/ark-desktop#readme",
  "dependencies": {
    "about-window": "~1.7.0"
  },
  "devDependencies": {
    "ajv": "^5.2.2",
    "electron": "^1.7.6",
    "electron-builder": "^19.24.1",
    "grunt": "~0.4.5",
    "grunt-angular-gettext": "^2.2.3",
    "grunt-contrib-jshint": "~0.10.0",
    "grunt-contrib-nodeunit": "~0.4.1",
    "grunt-contrib-uglify": "~0.5.0"
  },
  "build": {
    "appId": "com.arkwallet.liteclient",
    "mac": {
      "category": "finance"
    },
    "win": {
     "icon": "build/icon.ico",
     "target": ["nsis", "portable"]
    },
    "nsis": {
     "artifactName": "${productName}-${os}Installer${arch}.${version}.${ext}",
     "installerIcon": "build/icon.ico",
     "uninstallerIcon": "build/icon.ico",
     "installerHeaderIcon": "build/icon.ico",
     "oneClick": false,
     "allowToChangeInstallationDirectory": "true",
     "createDesktopShortcut": "true",
     "runAfterFinish": "true",
     "perMachine": false
    },
    "portable": {
      "artifactName": "${productName}-${os}${arch}.${version}.${ext}"
    },
    "linux": {
      "synopsis": "A Lite Client used to securely connect to the Kapu network and manage your Kapu assets.",
      "category": "finance",
      "description": "Kapu desktop client",
      "artifactName": "${productName}-${os}.${version}.${ext}"
    }
  }
}
