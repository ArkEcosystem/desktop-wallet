	"description": "Ark Ecosystem Desktop Wallet",
	"homepage": "./",
	"bugs": {
		"url": "https://github.com/ArkEcosystem/desktop-wallet/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ArkEcosystem/desktop-wallet.git"
	},
	"license": "MIT",
	"author": "ArkEcosystem <info@ark.io>",
