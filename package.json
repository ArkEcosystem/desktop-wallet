	"optionalDependencies": {
		"fsevents": "*"
	},
	"resolutions": {
		"**/fsevents": "^2.1.3",
		"**/**/bcrypto": "^5.3.0"
	},
	"babelMacros": {
		"twin": {
			"preset": "styled-components",
			"css": {
				"from": "styled-components",
				"import": "css"
			},
			"config": "src/tailwind.config.js",
			"autoCssProp": true
		}
	},
	"electronWebpack": {
		"main": {
			"sourceDirectory": "src/electron",
			"webpackConfig": "webpack.main.config.js"
		},
		"renderer": {
			"sourceDirectory": null
		}
	},
	"build": {
		"productName": "ARK Desktop Wallet",
		"appId": "io.ark.desktop-wallet",
		"artifactName": "${name}-${os}-${arch}-${version}.${ext}",
		"afterSign": "scripts/notarize.js",
		"npmRebuild": true,
		"extraMetadata": {
			"main": "build/electron/index.js"
		},
		"publish": {
			"provider": "github",
			"vPrefixedTagName": false
		},
		"extraResources": [
			"app-update.yml"
		],
		"protocols": {
			"name": "ARK URI scheme",
			"schemes": [
				"ark"
			],
			"role": "Viewer"
		},
		"directories": {
			"output": "dist/target"
		},
		"mac": {
			"category": "public.app-category.finance",
			"icon": "src/app/assets/icons/icon.icns",
			"hardenedRuntime": true,
			"gatekeeperAssess": false,
			"asarUnpack": [
				"**/*.node"
			],
			"entitlements": "./entitlements.mac.plist",
			"entitlementsInherit": "./entitlements.mac.plist"
		},
		"win": {
			"target": "nsis",
			"icon": "src/app/assets/icons/icon.ico"
		},
		"linux": {
			"category": "Utility",
			"icon": "src/app/assets/icons",
			"target": [
				"AppImage",
				"deb",
				"tar.gz",
				"snap"
			],
			"desktop": {
				"MimeType": "x-scheme-handler/ark;"
			}
		},
		"deb": {
			"depends": [
				"gconf2",
				"gconf-service",
				"libnotify4",
				"libappindicator1",
				"libxtst6",
				"libnss3",
				"libudev-dev"
			]
		},
		"dmg": {
			"icon": "src/app/assets/icons/icon.icns"
		},
		"nsis": {
			"perMachine": true,
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		}
	}
}
