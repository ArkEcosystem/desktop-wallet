    "moment": "^2.22.2",
    "portal-vue": "^1.5.0",
    "postcss-import": "^12.0.1",
    "qrious": "^4.0.2",
    "semver": "^5.6.0",
    "trunc-html": "^1.1.2",
    "v-tooltip": "^2.0.0-rc.33",
    "vm2": "^3.6.6",
    "vue": "^2.5.20",
    "vue-chartjs": "^3.4.0",
    "vue-good-table": "^2.15.3",
    "vue-i18n": "^8.4.0",
    "vue-qrcode-reader": "^1.3.2",
    "vue-router": "^3.0.2",
    "vue-spinner": "^1.0.3",
    "vue-vuelidate-jsonschema": "^0.13.4",
    "vuelidate": "^0.7.4",
    "vuex": "^3.0.1",
    "vuex-persist": "^2.0.0",
    "wif": "^2.0.6"
