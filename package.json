{
  "name": "ArkClient",
  "version": "1.3.0",
  "productName": "ArkClient",
  "description": "Ark Desktop",
  "main": "main.js",
  "scripts": {
    "postinstall": "cd client && npm install && cd .. && grunt build && npm run rebuild",
    "rebuild": "electron-rebuild --force",
    "electron": "electron --version",
    "start": "electron .",
    "dev": "grunt dev",
    "dist": "npm run dist:win && npm run dist:macos && npm run dist:linux && npm run dist:win32",
    "dist-quick": "npm run dist:win && npm run dist:macos && npm run dist:linux",
    "dist:win": "build --win --x64",
    "dist:win32": "build --win --ia32",
    "dist:macos": "build --macos",
    "dist:linux": "build --linux deb tar.xz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fix/ark-desktop.git"
  },
  "keywords": [
    "Electron",
    "Ark",
    "Client"
  ],
  "author": {
    "name": "Fx Thoorens",
    "email": "fixcrypt@gmail.com",
    "url": "https://github.com/fix"
  },
  "contributors": [
    {
      "name": "Guillaume Verbal",
      "email": "doweig@ark.io",
      "url": "https://github.com/doweig"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fix/ark-desktop/issues"
  },
  "homepage": "https://github.com/fix/ark-desktop#readme",
  "dependencies": {
    "about-window": "~1.6.1",
    "crypto": "0.0.3",
    "ledgerco": "github:ledgerhq/ledger-node-js-api#master",
    "q": "^1.5.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "brfs": "^1.4.3",
    "electron": "^1.7.5",
    "electron-builder": "^12.3.1",
    "electron-rebuild": "^1.5.11",
    "eslint": "^4.4.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "grunt": "~0.4.5",
    "grunt-angular-gettext": "^2.2.3",
    "grunt-browserify": "^5.0.0",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-connect": "^1.0.2",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-nodeunit": "~0.4.1",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-eslint": "^20.0.0",
    "grunt-htmllint": "^0.2.7",
    "jsqr": "^0.2.2",
    "load-grunt-tasks": "^3.5.2"
  },
  "build": {
    "appId": "com.arkwallet.liteclient",
    "mac": {
      "category": "finance"
    },
    "win": {
      "iconUrl": "https://ark.io/i/mediakit/icon_1.png"
    },
    "linux": {
      "synopsis": "A Lite Client used to securely connect to the Ark network and manage your Ark assets.",
      "description": ""
    }
  }
}